<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:id="@+id/iv_full"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ads_stroke">

<ImageView
    android:id="@+id/ads_image"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:scaleType="fitXY"
    android:layout_above="@+id/install"
    android:src="@drawable/ic_logo"
    android:layout_height="match_parent"/>
        <Button
            android:id="@+id/install"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Install"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ads_button"
            android:lines="1"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:layout_width="23dp"
            android:layout_height="17dp"
            android:background="@drawable/ads_corner"
            android:gravity="center"
            android:text="Ad"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/ads_image"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>